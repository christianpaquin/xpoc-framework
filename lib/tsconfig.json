{
    "compilerOptions": {
      "resolveJsonModule": true,
      "target": "ES2020",
      "module": "ES2020",
      "lib": ["ES2020", "DOM"],
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "strictNullChecks": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "allowJs": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": ".",
    },
    "include": [
      "src/**/*.ts",
    ],
    "exclude": [
      "node_modules",
      "src/bundle.ts"
    ]
  }
  