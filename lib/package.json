{
  "name": "xpoc-ts-lib",
  "version": "0.3.0",
  "description": "TypeScript reference implementation for the XPOC framework",
  "type": "module",
  "main": "dist/index.js",
  "browser": "browser/xpoc.esm.min.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build:clean": "npm run clean && npm run build",
    "build:tsc": "tsc",
    "build:bundle": "rollup -c",
    "build:schema": "node src/compile.schema.js",
    "build": "npm run build:schema && npm run build:tsc && npm run build:bundle",
    "clean": "rimraf dist browser ./src/manifest.schema.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --verbose"
  },
  "license": "MIT",
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "cheerio": "^1.0.0-rc.12"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^5.0.0",
    "@rollup/plugin-commonjs": "^25.0.4",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.2.1",
    "@rollup/plugin-replace": "^5.0.3",
    "@rollup/plugin-terser": "^0.4.3",
    "@types/jest": "^29.5.4",
    "@types/node": "^20.8.2",
    "jest": "^29.6.4",
    "rimraf": "^5.0.5",
    "rollup": "^3.29.3",
    "rollup-plugin-typescript2": "^0.35.0",
    "typescript": "^5.2.2"
  },
  "files": [
    "dist/",
    "lib/",
    "!**/*.test.ts"
  ],
  "jest": {
    "testTimeout": 15000,
    "testMatch": [
      "**/*.test.js"
    ],
    "testEnvironment": "node",
    "coverageReporters": [
      "json-summary"
    ]
  }
}
