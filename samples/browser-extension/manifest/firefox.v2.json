{
    "manifest_version": 2,
    "name": "Cross-Platform Origin Content Extension",
    "version": "0.3.0",
    "description": "Validates XPOC-protected content",
    "permissions": [
        "activeTab",
        "contextMenus",
        "https://*/*"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "icons": {
        "128": "icons/xpoc128x128.png"
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "128": "icons/xpoc128x128.png"
        }
    },
    "options_ui": {
        "page": "options.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        "icons/xpoc_logo.svg",
        "icons/checkmark.svg",
        "icons/invalid.svg",
        "icons/warning.svg"
    ]
}
